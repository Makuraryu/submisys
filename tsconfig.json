{
  "compilerOptions": {
    "target": "ES2021",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["bun"],
    "baseUrl": "./",
    "paths": {
      "@/api/*": ["src/api/*"],
      "@/utils/*": ["src/utils/*"],
      "@/db/*": ["src/db/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
